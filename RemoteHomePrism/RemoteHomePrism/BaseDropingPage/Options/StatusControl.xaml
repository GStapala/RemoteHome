<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemoteHomePrism.BaseDropingPage.Options.StatusControl">
    <Grid BackgroundColor="{Binding BackgroundColor}">
        <Label VerticalTextAlignment="Center" HorizontalTextAlignment="Start" Text="{Binding Text}"
               Style="{StaticResource LabelGlobalSyle}" TextColor="{Binding TextColor}" />
        <Label VerticalTextAlignment="Center" HorizontalTextAlignment="End" Text="{Binding InfoText}"
               Style="{StaticResource LabelGlobalSyle}" TextColor="{Binding TextColor}" />
    </Grid>
</ContentView>
<!-- Creates style for android app (shading etc)-->
<resources>
  <style name="MyTheme.Base" parent="@android:style/Theme.Holo.Light.DarkActionBar"> </style>

  <style name="MyTheme" parent="MyTheme.Base">
    <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
    <item name="android:colorActivatedHighlight">@color/morange</item>
  </style>

  <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
    <!--<item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>-->
    <!--<item name="android:colorActivatedHighlight">@android:color/transparent</item>-->
    <item name="android:background">@color/mdarkOrange</item><!--orange top bar-->
  </style>

  <style name="MyTheme.statusBarColor"  parent="android:style/Widget.ListView">
    <item name="android:background">@color/mdarkOrange</item>
  </style>

  <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/mwhite</item>
  </style>
</resources>
